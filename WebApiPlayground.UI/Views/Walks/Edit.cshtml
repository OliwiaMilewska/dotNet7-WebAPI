@model WebApiPlayground.UI.Models.DTO.WalkDto
@{
}

<h1 class="mt-3">Edit Walk</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input readonly type="text" class="form-control" asp-for="Id" />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Length in Km</label>
            <input type="number" class="form-control" asp-for="LengthInKm" />
            <p class="alert-info">Range 0 - 50 km</p>
        </div>
        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="WalkImageUrl" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}