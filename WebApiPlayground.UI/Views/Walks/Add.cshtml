@model WebApiPlayground.UI.Models.AddWalkViewModel
@{
}

<h1 class="mt-3">Add Walk</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Length in Km</label>
        <input type="number" class="form-control" asp-for="LengthInKm"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="WalkImageUrl" />
    </div>
    <div class="mt-3">
        <label class="form-label">Difficulty</label>
        <select name="difficultyId" asp-for="DifficultyId">
            <option value="54466F17-02AF-48E7-8ED3-5A4A8BFACF6F">Easy</option>
            <option value="EA294873-7A8C-4C0F-BFA7-A2EB492CBF8C">Medium</option>
            <option value="F808DDCD-B5E5-4D80-B732-1CA523E48434">Hard</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Region ID</label>
        <select name="regionId" asp-for="RegionId">
            <option value="906CB139-415A-4BBB-A174-1A1FAF9FB1F6">Nelson</option>
            <option value="F7248FC3-2585-4EFB-8D1D-1C555F4087F6">Auckland</option>
            <option value="14CEBA71-4B51-4777-9B17-46602CF66153">Bay Of Plenty</option>
            <option value="6884F7D7-AD1F-4101-8DF3-7A6FA7387D81">Northland</option>
            <option value="F077A22E-4248-4BF6-B564-C7CF4E250263">Southland</option>
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>